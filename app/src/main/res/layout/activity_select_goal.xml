<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f4f4f4"
    tools:context=".SelectGoalActivity">

    <!-- Back Button -->
    <Button
        android:id="@+id/btnBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="BACK"
        android:backgroundTint="#FF3D00"
        android:textColor="#FFFFFF" />

    <!-- Title -->
    <TextView
        android:id="@+id/txtGoalTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:text="Goal Overview"
        android:textColor="#000000"
        android:textSize="24sp"
        android:textStyle="bold" />

    <!-- Goal Name -->
    <TextView
        android:id="@+id/txtGoalName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_marginHorizontal="16dp"
        android:text="Goal Name"
        android:textColor="#000000"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_below="@id/txtGoalTitle" />

    <!-- Goal Description -->
    <TextView
        android:id="@+id/txtGoalDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="16dp"
        android:text="Goal Description"
        android:textColor="#555555"
        android:textSize="16sp"
        android:layout_below="@id/txtGoalName" />

    <!-- Progress Bar -->
    <ProgressBar
        android:id="@+id/progressGoal"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:layout_below="@id/txtGoalDescription"
        style="?android:attr/progressBarStyleHorizontal"
        android:indeterminateOnly="false"
        android:progress="50"
        android:progressTint="#4CAF50" />

    <Button
        android:id="@+id/btnIncrementProgress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Increment Progress"
        android:layout_below="@id/progressGoal"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp" />

    <Button
        android:id="@+id/btnResetProgress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reset Progress"
        android:layout_below="@id/btnIncrementProgress"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp" />


</RelativeLayout>
